<div class="container">
    <div class="card mt-5">
        <div class="card-header" style="background-color: antiquewhite;">
            <h1>PEDIDOS</h1>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    pedids.forEach((pedido) => {
                    %>
                    <tr>
                        <td><%= pedido.peliculaId %></td>
                        <td><%= pedido.peliculaTitulo %></td>
                    </tr>
                    <%
                    });
                    %>
                </tbody>
            </table>
        </div>
        <div class="card-footer"></div>
    </div>
</div>
