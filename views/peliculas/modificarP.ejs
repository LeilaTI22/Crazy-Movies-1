<%- include("../template/encabezado") %>
<%- include("../template/menu") %>

<div class="container mt-5">
    <form action="/editarPelicula" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header" style="background-color: antiquewhite;">
                <h1>MODIFICAR PELICULA</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= peli.id %>">
                <input type="hidden" name="foto" id="foto" value="<%= peli.foto %>">
                <input class="form-control mb-3" value="<%= peli.titulo %>" type="text" name="titulo" id="titulo" placeholder="Titulo" autofocus>
                <input class="form-control mb-3" value="<%= peli.duracion %>" type="text" name="duracion" id="duracion" placeholder="Duracion">
                <input class="form-control mb-3" value="<%= peli.productora %>" type="text" name="productora" id="productora" placeholder="Productora">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-success">Modificar Pelicula</button>
            </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
        </div>
    </form>
</div>
<%- include("../template/pie") %>